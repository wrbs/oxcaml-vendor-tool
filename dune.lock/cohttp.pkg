(version 6.1.1)

(build
 (progn
  (when
   %{pkg-self:dev}
   (run dune subst))
  (run dune build -p %{pkg-self:name} -j %{jobs} @install)))

(depends
 dune
 http
 ocaml
 re
 uri
 uri-sexp
 logs
 sexplib0
 ppx_sexp_conv
 stringext
 base64)

